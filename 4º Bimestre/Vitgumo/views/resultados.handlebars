<link rel="stylesheet" href="/css/style.css">
{{> header}}

<div class="busca-container">
  {{#if produtos.length}}
    <h2>
      {{quantidade}} produto{{#unless (eq quantidade 1)}}s{{/unless}} encontrado{{#unless (eq quantidade 1)}}s{{/unless}} para "<span class="termo">{{termo}}</span>"
    </h2>

    <div class="produtos-lista">
      {{#each produtos}}
        <div class="produto-card">
          <img src="{{this.imagem}}" alt="{{this.nome}}">
          <div class="produto-info">
            <h3>{{this.nome}}</h3>
            <p>{{this.descricao}}</p>
            <span class="preco">R$ {{this.preco}}</span>
            <form action="/vitgumo/1.0.0/carrinho/adicionar" method="POST">
              <input type="hidden" name="idProduto" value="{{this.idProduto}}">
              <button type="submit">Adicionar ao carrinho</button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="nenhum-produto">
      <img src="/img/empty.png" alt="Nenhum produto" class="empty-img">
      <h2>Nenhum produto encontrado</h2>
      <p>Tente buscar por outro termo ou confira nossas categorias.</p>
      <a href="/" class="btn-voltar-home">Voltar à página inicial</a>
    </div>
  {{/if}}
</div>

<style>
  :root {
    --bg: #f8fafc;
    --surface: #ffffff;
    --text: #1e293b;
    --muted: #64748b;
    --primary: #003566;
    --accent: #ff6b35;
    --radius: 12px;
    --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
    --transition: 0.25s ease;
  }

  body {
    background: var(--bg);
    font-family: 'Inter', sans-serif;
    color: var(--text);
    padding: 100px 6% 60px;
  }

  .busca-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    text-align: center;
    color: var(--primary);
    font-size: 1.8rem;
    margin-bottom: 40px;
  }

  .termo {
    color: var(--accent);
  }

  .produtos-lista {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
  }

  .produto-card {
    background: var(--surface);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    transition: transform var(--transition), box-shadow var(--transition);
    display: flex;
    flex-direction: column;
    text-align: center;
    padding-bottom: 16px;
  }

  .produto-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  }

  .produto-card img {
    width: 100%;
    height: 220px;
    object-fit: contain;   /* mantém a proporção da imagem */
    background: #f1f5f9;   /* fundo neutro para imagens menores */
    border-bottom: 1px solid #e2e8f0;
    padding: 10px;
    transition: transform var(--transition);
  }

  .produto-card:hover img {
    transform: scale(1.03); /* leve zoom ao passar o mouse */
  }

  .produto-info {
    padding: 16px;
  }

  .produto-info h3 {
    color: var(--primary);
    font-size: 1.2rem;
    margin-bottom: 6px;
  }

  .produto-info p {
    color: var(--muted);
    font-size: 0.95rem;
    margin-bottom: 8px;
  }

  .preco {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--accent);
  }

  .produto-info button {
    margin-top: 10px;
    background: var(--primary);
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 10px 16px;
    cursor: pointer;
    font-weight: 600;
    transition: background var(--transition), transform var(--transition);
  }

  .produto-info button:hover {
    background: #002b4d;
    transform: translateY(-2px);
  }

  /* Nenhum produto */
  .nenhum-produto {
    text-align: center;
    margin-top: 80px;
  }

  .empty-img {
    width: 180px;
    opacity: 0.7;
    margin-bottom: 20px;
  }

  .nenhum-produto h2 {
    color: var(--primary);
    margin-bottom: 10px;
  }

  .nenhum-produto p {
    color: var(--muted);
    font-size: 1rem;
    margin-bottom: 20px;
  }

  .btn-voltar-home {
    background: var(--accent);
    color: #fff;
    text-decoration: none;
    border-radius: 10px;
    padding: 10px 18px;
    font-weight: 600;
    transition: background var(--transition), transform var(--transition);
  }

  .btn-voltar-home:hover {
    background: #ff4f12;
    transform: translateY(-2px);
  }

  /* Responsivo */
  @media (max-width: 600px) {
    h2 {
      font-size: 1.5rem;
    }

    .produto-card img {
      height: 160px;
    }
  }
</style>
