<link rel="stylesheet" href="/css/style.css">
{{> header}}

<div class="checkout-container">
  <div class="checkout-card">
    <div class="checkout-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#90be6d">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
      </svg>
    </div>

    <h1>Compra Finalizada!</h1>
    <p>Seu pedido <strong>#{{idPedido}}</strong> foi realizado com sucesso.</p>
    <p>Total: <strong>R$ {{total}}</strong></p>

    <a href="/" class="btn-voltar-home">Voltar para a página inicial</a>
  </div>
</div>

<style>
  :root {
    --bg: #f8fafc;
    --surface: #ffffff;
    --text: #1e293b;
    --muted: #64748b;
    --primary: #003566;
    --accent: #ff6b35;
    --success: #90be6d;
    --radius: 16px;
    --shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    --transition: 0.25s ease;
  }

  body {
    background: var(--bg);
    color: var(--text);
    font-family: 'Inter', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 90vh;
    padding: 80px 20px 40px;
  }

  .checkout-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .checkout-card {
    background: var(--surface);
    box-shadow: var(--shadow);
    border-radius: var(--radius);
    padding: 40px 32px;
    text-align: center;
    max-width: 460px;
    width: 100%;
    animation: fadeIn 0.4s ease;
  }

  .checkout-icon {
    background: rgba(144, 190, 109, 0.1);
    border-radius: 50%;
    width: 100px;
    height: 100px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  h1 {
    color: var(--success);
    font-size: 2rem;
    margin-bottom: 10px;
  }

  p {
    font-size: 1.1rem;
    color: var(--text);
    margin: 8px 0;
  }

  strong {
    color: var(--primary);
  }

  .btn-voltar-home {
    display: inline-block;
    background: var(--primary);
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    border-radius: 10px;
    padding: 12px 22px;
    margin-top: 20px;
    transition: background var(--transition), transform var(--transition);
  }

  .btn-voltar-home:hover {
    background: #002b4d;
    transform: translateY(-2px);
  }

  /* Animação */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsivo */
  @media (max-width: 500px) {
    .checkout-card {
      padding: 30px 20px;
    }

    h1 {
      font-size: 1.6rem;
    }

    p {
      font-size: 1rem;
    }
  }
</style>
