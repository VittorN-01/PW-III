<style>
  :root {
    --bg: #f8fafc;
    --surface: #ffffff;
    --text: #1e293b;
    --muted: #64748b;
    --primary: #003566;
    --accent: #ff6b35;
    --success: #90be6d;
    --radius: 12px;
    --shadow: 0 4px 12px rgba(0,0,0,0.08);
    --transition: 0.25s ease;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--bg);
    color: var(--text);
    line-height: 1.5;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    display: block;
    max-width: 100%;
  }

  /* ===== HEADER ===== */
  .header {
    background: var(--primary);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 5%;
    color: #fff;
    position: sticky;
    top: 0;
    z-index: 50;
    box-shadow: var(--shadow);
  }

  .logo img {
    height: 52px;
  }

  #divBusca {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #fff;
    border-radius: 999px;
    padding: 6px 14px;
    width: 320px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }

  #txtBusca {
    border: none;
    outline: none;
    font-size: 15px;
    flex: 1;
    color: var(--text);
  }

  #txtBusca::placeholder {
    color: var(--muted);
  }

  .login {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .login span {
    font-weight: 500;
  }

  .login-btn {
    background: #fff;
    color: var(--primary);
    padding: 6px 14px;
    border-radius: 10px;
    font-weight: 600;
    transition: background var(--transition);
  }

  .login-btn:hover {
    background: var(--accent);
    color: #fff;
  }

  .cart-link svg path {
    transition: stroke var(--transition), fill var(--transition);
  }

  .cart-link:hover svg path {
    stroke: var(--accent);
    fill: var(--accent);
  }

  /* ===== CATEGORIAS ===== */
  .categorias {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    background: var(--surface);
    padding: 16px 5%;
    box-shadow: var(--shadow);
  }

  .categoria-btn {
    background: var(--primary);
    color: #fff;
    padding: 8px 16px;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform var(--transition), background var(--transition);
  }

  .categoria-btn:hover {
    background: var(--accent);
    transform: translateY(-2px);
  }

  /* ===== PRODUTOS / CARROSSEL ===== */
  .produtos {
    padding: 40px 5%;
  }

  .produtos h3 {
    font-size: 1.6rem;
    color: var(--text);
    margin-bottom: 18px;
  }

  .carrossel-container {
    position: relative;
    overflow: hidden;
    margin-bottom: 40px;
  }

  .carrossel {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 10px 0;
  }

  .carrossel::-webkit-scrollbar {
    display: none;
  }

  .produto-card-wrapper {
    flex: 0 0 220px;
    display: flex;
    flex-direction: column;
  }

  .arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0,0,0,0.4);
    color: #fff;
    border: none;
    font-size: 2rem;
    padding: 6px 12px;
    cursor: pointer;
    border-radius: 8px;
    transition: background var(--transition);
  }

  .arrow:hover {
    background: rgba(0,0,0,0.6);
  }

  .prev { left: 4px; }
  .next { right: 4px; }

  /* ===== PRODUTO CARD ===== */
  .produto {
    background: var(--surface);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 14px;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform var(--transition), box-shadow var(--transition);
  }

  .produto:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.1);
  }

  .produto img {
    width: 140px;
    height: 120px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 10px;
  }

  .produto h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 4px;
    text-align: center;
  }

  .produto .descricao {
    font-size: 0.9rem;
    color: var(--muted);
    text-align: center;
  }

  .produto .preco {
    color: var(--accent);
    font-weight: 700;
    font-size: 1.1rem;
    margin-top: 8px;
  }

  .btn-carrinho {
    margin-top: 10px;
    background: var(--accent);
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 8px 12px;
    cursor: pointer;
    font-weight: 600;
    transition: background var(--transition);
  }

  .btn-carrinho:hover {
    background: #ff5a20;
  }

  /* ===== FOOTER ===== */
  .footer {
    background: var(--primary);
    color: #fff;
    text-align: center;
    padding: 28px 5%;
    margin-top: 40px;
  }

  .footer img {
    height: 60px;
    margin: 0 auto 12px;
  }

  .footer p {
    font-size: 0.95rem;
    line-height: 1.5;
  }

  /* ===== RESPONSIVIDADE ===== */
  @media (max-width: 800px) {
    #divBusca {
      width: 200px;
    }

    .categorias {
      gap: 8px;
      padding: 12px;
    }

    .produto {
      padding: 10px;
    }

    .produto img {
      width: 120px;
      height: 100px;
    }

    .arrow {
      font-size: 1.5rem;
    }

    .login span {
      display: none;
    }
  }
</style>


<script>
document.querySelectorAll('.carrossel-container').forEach(container => {
  const carrossel = container.querySelector('.carrossel');
  const prev = container.querySelector('.prev');
  const next = container.querySelector('.next');

  prev.addEventListener('click', () => {
    carrossel.scrollBy({ left: -300, behavior: 'smooth' });
  });

  next.addEventListener('click', () => {
    carrossel.scrollBy({ left: 300, behavior: 'smooth' });
  });
});
</script>
