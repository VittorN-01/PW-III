    {{/each}}
  </nav>


<!-- CARROSSEL DE PRODUTOS -->
  <section class="produtos">
    {{#each categorias}}
      <h3 id="{{this.nome}}" style="text-align: center; color:#000; margin: ">{{this.nome}}</h3>
      <div class="carrossel-container">
        <button class="arrow prev">&#10094;</button>
        <div class="carrossel">
          {{#each this.produtos}}
            <div class="produto-card-wrapper">
              {{> cardProdutos}}
            </div>
          {{/each}}
        </div>
        <button class="arrow next">&#10095;</button>
      </div>
    {{/each}}
  </section>

  <!-- FOOTER -->
  <footer class="footer">
